{
  "name": "n8n-nodes-simple-sqlite",
  "version": "0.3.0",
  "description": "Simple SQLite Node for n8n",
  "keywords": [
    "n8n-community-node-package",
    "sqlite"
  ],
  "license": "MIT",
  "author": {
    "name": "Alfred Schilken",
    "email": "alfred@schilken.de"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/schilken/n8n-nodes-simple-sqlite"
  },
    "engines": {
    "node": ">=20.15"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc && npm run copy:images",
    "copy:images": "cp nodes/**/*.svg nodes/**/*.png dist/nodes/SimpleSqlite",
    "dev": "tsc --watch",
    "run-dev": "npm run build && cross-env N8N_LOG_LEVEL=debug n8n start",
    "run-dev-tunnel": "npm run build && cross-env N8N_LOG_LEVEL=debug n8n start --tunnel",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "npm run build && npm run lint -c .eslintrc.prepublish.js nodes credentials package.json",
    "semantic-release": "semantic-release"
  },
  "files": [
    "dist/**/*",
    "index.js"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "nodes": [
      "dist/nodes/SimpleSqlite/SimpleSqlite.node.js"
    ],
    "credentials": [
      "dist/credentials/SimpleSqliteApi.credentials.js"
    ]
  },
  "dependencies": {
    "sqlite3": "^5.1.6"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@typescript-eslint/parser": "~8.32.0",
    "eslint": "^8.57.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.3",
    "gulp": "^5.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "@types/node": "^20.0.0",
    "n8n-core": ">=1.14.1",
    "n8n-workflow": ">=1.82.0"
  }
}